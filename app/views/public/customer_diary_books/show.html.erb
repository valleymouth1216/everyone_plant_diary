<div class='container'>

  <%= render 'layouts/error_messages', resource: @diary_date %>

  <div class="content customers">
      <%= link_to customer_customer_diary_books_path(@customer),class:"customer_card_hover" do  %>
        <div class="customer_card p-1">
          <%= image_tag @customer.get_profile_image(50,50)%>&emsp;<%= "#{@customer.name}さん" %>
        </div>
      <% end %>

    <div class="card d-block index rounded-0 my-4" >
      <div class="card-header_design2"><h2 class="section-ttl"><span class="px-1"><%= @diary_date.diary_book.title %>の日記</span></h2></div>


      <div class="loose-leaf">
        <div class="row">

        <div class="col-lg-5">

          <div class="m-2 required_frame py-2" >
          <p class="card_text_boder_left_80 no_margins">
            <span class="px-2">日付</span>
            <%= @diary_date.start_time.strftime('%Y/%m/%d') %>
          </p>
          </div>
          <div class="m-2 arbitrary_data py-2">
            <p class="card_text_boder_left_80 no_margins">
            <span class="px-2">天気</span>
            <%=@diary_date.weather_i18n%>
            </p>
          </div>
          <div class="m-2 arbitrary_data py-2">
            <p class="card_text_boder_left_80 no_margins">
            <span class="px-2">気温</span>
            <%if @diary_date.temperature.present? %>
              <%= @diary_date.temperature %>℃<
            <% else %>
              未入力
            <% end %>
            </p>
          </div>
          <div class="m-2 arbitrary_data py-2">
            <p class="card_text_boder_left_80 no_margins">
            <span class="px-2">いいね回数</span>
            <%= @diary_date.favorites.count %>
              <% if @diary_date.favorited_by?(current_customer) %>
                <%= link_to customer_customer_diary_book_favorites_path(@customer.id,@diary_date.id), method: :delete ,class:"px-3" do %>
                  ♥
                <% end %>
              <% else %>
                <%= link_to customer_customer_diary_book_favorites_path(@customer.id,@diary_date.id), method: :post ,class:"px-3" do %>
                  ♡
                <% end %>
              <% end %>
            </p>
          </div>
          <% if @diary_date.diary_images.attached? %>
          <div class="m-2 arbitrary_data character_underline py-2">
            <span class="px-3">画像</span>
          </div>
          <div class="m-1 p-1 arbitrary_data side_scroll">
              <% @diary_date.diary_images.each do |diary_image| %>
                <a href="<%= url_for(diary_image) %>">
                <%= image_tag diary_image.representation(resize_to_limit: [200, 180]).processed,class:"pr-5 py-1" %>
              <% end %>
          </div>
          <% end %>
          <div class="m-2 arbitrary_data" style="text-align:center;">
            <%= link_to '日記一覧へ', customer_customer_diary_books_path(diary_book: @diary_date.diary_book.id),class: "btn btn-primary m-1" %>
          </div>
        </div>

        <div class="character_underline col-lg-7">
            <p class="required_frame py-2"><span class="px-1">内容</span></p>
            <div class="required_frame_data">
              <p class="px-1 mx-4"style="text-align:left;"><span><%= @diary_date.body %></span></p>
            </div>
          </div>
        </div>

        </div>
      </div>

  </div>





  <div class="content customers my-2">


    <div class="card d-block index rounded-0" >
      <div class="card-header_design2"><h2 class="section-ttl"><span class="diary_date_header_new px-1">コメント一覧</span></h2></div>  <div class="character_underline">
        <div class="loose-leaf">
          <% @diary_date.diary_comments.each do |diary_comment| %>
          <div class="p-1 comment vertical-align: middle my-2">
            <%= image_tag diary_comment.customer.get_profile_image(70,50),class:"px-1" %><%= diary_comment.customer.name %>さんのコメント
            <div class="comment_date"><%= diary_comment.created_at.strftime('%Y/%m/%d') %></div>
            <p><%= diary_comment.comment %></p>
                <% if diary_comment.customer == current_customer %>
                  <%= link_to "削除", customer_customer_diary_book_diary_comment_path(@customer.id,@diary_date.id, diary_comment), "data-confirm" => "本当にコメントを削除しますか？", method: :delete,class: "btn btn-danger m-1",:style =>"text-align:left;" %>
                <% end %>
          </div>
            <% end %>
          <div class="m-1 p-1 diary_date_new vertical-align: middle " style="text-align:center;">
     　      <%= form_with model: @diary_comment,url: customer_customer_diary_book_diary_comments_path(@customer.id,@diary_date.id) do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントする" %>
            <%= f.submit "コメントする",class: "btn btn-success m-1"%>
          <% end %>
          </div>
        </div>
      </div>
    </div>



</div>

 </div>