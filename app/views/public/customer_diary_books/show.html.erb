<div class='container'>

<div class="content">


    <h2 class="section-ttl"><%= @diary_date.diary_book.customer.name %>さんの<%= @diary_date.diary_book.title %>の日記</h2>
    <h2 class="section-ttl"></h2>

      <% @diary_date.diary_book.tags.each do |tag| %>
        ▶<%= tag.name %>
      <% end %>


      <table class="customer_info customer_form" border="1">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>日付</td>
            <td><%= @diary_date.start_time.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>天気</td>
            <td><%=@diary_date.weather_i18n%></td>
          </tr>
          <tr>
          <tr>
            <td>気温</td>
            <td><%= @diary_date.temperature %>℃</td>
          </tr>
          <tr>
            <td>画像</td>
            <td>
              <% if @diary_date.diary_images.attached? %>
                  <% @diary_date.diary_images.each do |diary_image|%>
                   <a href="<%= url_for(diary_image) %>">
                    <%#= image_tag diary_image.variant(resize_to_limit: [500, 200]).processed %>
                    <%#= image_tag diary_image.variant(resize: '500x200').processed %>
                    <%= image_tag diary_image.representation(resize_to_limit: [100, 50]).processed %>
                  <% end %>
              <% else %>
                  画像がありません
              <% end %>
            </td>
          </tr>
        </tbody>
        </table>

      <table class="customer_info customer_form" border="1">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>内容</td>
          </tr>
          <tr>
            <td colspan="2"><%= @diary_date.body %></td>
          </tr>
          <tr>
            <td>日記の公開設定</td>
            <td><% if @diary_date.status == true %>公開する<% else %>公開しない<% end %></td>
          </tr>
          <tr>
        </tbody>
        </table>

<%= link_to "このユーザの他の日記をみる", customer_customer_diary_books_path(diary_book: @diary_date.diary_book.id) %>


    <div>
      <p>コメント入力</p>
      <%= form_with model: @diary_comment,url: customer_customer_diary_book_diary_comments_path(@customer.id,@diary_date.id) do |f| %>
        <%= render 'layouts/error_messages', resource: @diary_comment %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>


      <% if @diary_date.diary_comments.present? %>
        <table class="customer_info customer_form" border="1">
          <thead>
            <th colspan="2">コメント一覧(全<%= @diary_date.diary_comments.count %>件)</th>
          </thead>
          <tbody>
            <% @diary_date.diary_comments.each do |diary_comment| %>
            <tr>
              <td colspan="2"><%= diary_comment.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td><%= image_tag diary_comment.customer.get_profile_image(70,50) %></td>
              <td><%= diary_comment.customer.name %>さんのコメント</td>
            </tr>
            <tr>
              <td colspan="2"><%= diary_comment.comment %></td>
            </tr>
            <tr>
              <td>
                <% if diary_comment.customer == current_customer %>
                  <%= link_to "削除", customer_customer_diary_book_diary_comment_path(@customer.id,@diary_date.id, diary_comment), "data-confirm" => "本当にコメントを削除しますか？", method: :delete %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>


</div>

</div>