<div class='container'>

  <div class="row">


    <div class="content customers col-lg-3 col-sm-12 col-12 col-md-12 m-1">

      <div class="card d-block index rounded-0 my-1" >
        <div class="card-header mb-3"><h2 class="section-ttl">日記帳一覧</h2></div>
          <% if params[:tag_ids].present? %>
            <div class="card rounded-0">
              タグ検索結果
                <% params[:tag_ids].each do |key, value| %>
                  <% if value == "1" %>
                    <span>"<%= key %>"</span>
                   <% end %>
                <% end %>
            </div>
          <% end %>

          <% @diary_books.each do |diary_book| %>
            <% if diary_book.id.present? %>
              <%=link_to customer_customer_diary_books_path(diary_book: diary_book.id),class:"card_link_font" do %>
                <div class="card rounded-0 card_hover">
                  <p class="no_margins py-2" style=" word-break: break-all;text-align:left" ><span>・</span><%= diary_book.title %></p>
                 </div>
              <% end %>
            <% end %>
          <% end %>
          <%= paginate @diary_books %>
      </div>

      <div class="card d-block tag rounded-0" >
        <%= form_tag({controller:"customer_diary_books",action:"index"}, method: :get) do %>
        <div class="card-header mb-3"><h2 class="section-ttl">タグ検索</h2></div>
          <% Tag.all.each do |t| %>
            <%= check_box :tag_ids, t.name %><%= t.name %>
          <% end %>
        <%= submit_tag '検索',class:"m-2 search_color" %>
        <% end %>
      </div>

    </div>


    <div class="content customers  col-lg-8 col-sm-12 col-12 col-md-12 m-1">

      <% if @diary_book.present? %>
        <div class="card d-block calendar rounded-0" >
          <div class="card-header mb-3"><h2 class="section-ttl"><%= @diary_book.title %>の日記</h2></div>
          <%= link_to customer_customer_diary_books_path(@customer),class:"customer_card_hover" do  %>
            <div class="customer_card p-1">
              <%= image_tag @customer.get_profile_image(50,50)%>&emsp;<%= "#{@customer.name}さん" %>
            </div>
          <% end %>
          <div class="row justify-content-center card_text">
            <p class="col-lg-10 col-sm-10 col-10 col-md-5">
              <span>タグ:</span>
              <% @diary_book.tags.each do |tag| %>
                <span>▶<%= tag.name %></span>
              <% end %>
            </p>
            <% if @diary_date.present? %>
              <p class="col-lg-10 col-sm-10 col-10 col-md-5">最新記録日付：<%= @diary_date.start_time.strftime('%Y/%m/%d') %></p>
            <% else %>
              <p>この日記帳は何も投稿されていません。</p>
            <% end %>
          </div>
          <%= month_calendar events: @diary_dates do |date, diary_dates| %>
            <p style="text-align:center" class="my-1"><%= date.day %></p>
            <% diary_dates.each do |diary_date| %>
            <div>
              <% if diary_date.diary_images.attached? %>
                <%= link_to customer_customer_diary_book_path(@customer,diary_date) do %>
                  <%= image_tag diary_date.diary_images[0].representation(resize_to_limit: [70, 70]).processed, class: "image_size" %>
                <% end %>
              <% else %>
                <%= link_to customer_customer_diary_book_path(@customer,diary_date) do %>
                  <span style="word-break: break-all;"><%= diary_date.body.truncate(15, omission: '...続き') %></span>
        　       <% end %>
              <% end %>
            </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
          <h2 class="section-ttl">日記帳を選択してください</h2>
      <% end %>

    </div>



   </div>

</div>
