<div class='container'>

  <%= render "public/shared/error_messages", resource: resource %>


  <div class="content my_content">

    <div class="card d-block" >
      <div class="card-header mb-3"><h2 class="section-ttl">新規登録</h2></div>

      <div class="card-body character_underline">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row my-3" >
            <div class="col-lg-4 text_position_cetnter_left" ><span class="px-5"><%= f.label :name, "ユーザ名" %></span></div>
            <div class="col-lg-7"><%= f.text_field :name,placeholder:"令和",class:" my_page_edit" %></div>
        </div>
        <div class="row my-3">
            <div class="col-lg-4 text_position_cetnter_left"><span class="px-4"><%= f.label :email, "メールアドレス" %></span></div>
            <div class="col-lg-7"><%= f.email_field :email, autofocus: true,class:"my_page_edit", autocomplete: "email",placeholder:"sample@example.com" %></div>
        </div>
        <div class="row my-3" >
            <div class="col-lg-4 text_position_cetnter_left"><span class="px-2"><%= f.label :password, "パスワード" %><% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)<% end %></span></div>
            <div class="col-lg-7"><%= f.password_field :password           ,class:"my_page_edit" ,autocomplete: "new-password"%></div>
        </div>
        <div class="row my-3" >
            <div class="col-lg-4 text_position_cetnter_left"><span class="px-4"><%= f.label :password_confirmation, "パスワード確認用" %></span></div>
            <div class="col-lg-7"><%= f.password_field :password_confirmation,class:" my_page_edit" , autocomplete: "new-password"%></div>
        </div>
          <%= f.submit "新規登録",class:"btn btn-success m-2" %>
        <% end %>
      </div>

    </div>

    <%= render "public/shared/links" %>

    </div>
</div>