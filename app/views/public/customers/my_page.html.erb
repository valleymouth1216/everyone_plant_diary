<div class='container'>

  <div class="content my_content">


    <div class="card d-block rounded-0" >
      <div class="card-header mb-3"><h2 class="section-ttl">登録基本情報</h2></div>
        <%= image_tag @customer.get_profile_image(100,100)  %>
        <div class="card-body">
      <div class="row justify-content-center character_underline ">
        <div class="col-lg-4 character_underline_date_name"><span class="px-4">ユーザ名</span></div>
        <div class="col-lg-7 character_underline_date"><span style="word-break: break-all;"><%= @customer.name %></span></div>
      </div>
      <div class="row justify-content-center character_underline my-3">
        <div class="col-lg-4 character_underline_date_name"><span class="px-2">メールアドレス</span></div>
        <div class="col-lg-7 character_underline_date"><span><%= @customer.email %></span></div>
      </div>
      <div class="row justify-content-center">
        <%= link_to "基本情報編集をする", edit_information_path, class: "btn btn-info my-3 mx-1 btn_size col-lg-4" %>
        <%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-info my-3 mx-1 col-lg-4" %>
      </div>
    </div>
</div>

  </div>

</div>