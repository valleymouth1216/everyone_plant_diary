<div class='container'>

  <div class="content customers">

    <div class="card d-block rounded-0 index my-2" >
    <div class="card-header_design2 mb-3"><h2 class="section-ttl">ユーザ一覧</h2></div>

    <% if @customers.present? %>
      <% @customers.each do |customer|%>
        <div class="card d-block index rounded-0 my-1" >
          <%= link_to customer_path(customer),class:"card_hover" do %>
            <div class="card-body">
              <div class="row align-items-center character_underline">
                <p class="col-lg-4"><%= image_tag customer.get_profile_image(100,100),class:"p-2" %></p>
                <p class="col-lg-7 text_position_left_cetnter"><span class="px-2">ユーザ名</span><span class="px-2" style="word-break: break-all;"><%= customer.name %>さん</span></p>
              </div>
             </div>
          <% end %>
         </div>
      <% end %>
      <%= paginate @customers %>
    <% else %>
      <p>ユーザが登録されていません。</p>
    <% end %>

    </div>

  </div>

</div>