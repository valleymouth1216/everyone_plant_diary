<div class='container'>

<div class="content">


    <h2 class="section-ttl">会員一覧</h2>

      <% @customers.each do |customer|%>
      <%= link_to customer_path(customer) do %>
        <table class="customer_info customer_form" border="1">
          <tr>
            <td colspan="2"><%= image_tag customer.get_profile_image(100,100) %></td>
            <td>ユーザ名</td>
            <td><%= customer.name %></td>
          </tr>
        </table>
      <% end %>
      <% end %>
    <% if @customers.present? %>
      <%= paginate @customers %>
    <% else %>
      <p>ユーザが登録されていません。</p>
    <% end %>


<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag 'no_image.jpg', class: "card-img" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>
</div>

</div>