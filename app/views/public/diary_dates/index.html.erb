<div class='container'>

  <div class="row">


    <div class="content my_content col-lg-3 col-sm-12 col-12 col-md-12 m-1">

      <div class="card d-block index rounded-0 my-1" >
        <div class="card-header mb-3"><h2 class="section-ttl">日記帳一覧</h2></div>
          <% if params[:tag_ids].present? %>
            <div class="card rounded-0">
              タグ検索結果
                <% params[:tag_ids].each do |key, value| %>
                  <% if value == "1" %>
                    <span>"<%= key %>"</span>
                   <% end %>
                <% end %>
            </div>
          <% end %>

          <% @diary_books.each do |diary_book| %>
            <% if diary_book.id.present? %>
              <%=link_to diary_books_diaries_path(diary_book: diary_book.id),class:"card_link_font" do %>
                <div class="card rounded-0 card_hover">
                  <p class="no_margins py-2" style=" word-break: break-all;text-align:left" ><span>・</span><%= diary_book.title %></p>
                 </div>
              <% end %>
            <% end %>
          <% end %>
          <%= paginate @diary_books %>
      </div>

      <div class="card d-block tag rounded-0" >
        <%= form_tag({controller:"diary_dates",action:"index"}, method: :get) do %>
        <div class="card-header mb-3"><h2 class="section-ttl">タグ検索</h2></div>
          <% Tag.all.each do |t| %>
            <%= check_box :tag_ids, t.name %><%= t.name %>
          <% end %>
        <%= submit_tag '検索',class:"m-2 search_color" %>
        <% end %>
      </div>

    </div>


    <div class="content my_content  col-lg-8 col-sm-12 col-12 col-md-12 m-1">


      <% if @diary_book.present? %>
        <div class="tags">
          <% @diary_book.tags.each do |tag| %>
            ▶<%= tag.name %>
          <% end %>
        </div>

        <div class="card d-block calendar rounded-0 my-3" >
          <div class="card-header mb-3"><h2 class="section-ttl"><%= @diary_book.title %>の日記</h2></div>

          <%= link_to "日記を作成する", new_diary_book_diary_date_path(@diary_book), class: "btn btn-success m-1" %>

          <div class="row justify-content-center card_text">
            <% if @diary_date.present? %>
              <p class="col-lg-10 col-sm-10 col-10 col-md-5 no_margins">最新記録日付：<%= @diary_date.start_time.strftime('%Y/%m/%d') %></p>
            <% else %>
              <p  class="col-lg-10 col-sm-10 col-10 col-md-5 no_margins">この日記帳は何も投稿されていません。</p>
            <% end %>
          </div>

          <%= month_calendar events: @diary_dates do |date, diary_dates| %>
            <p style="text-align:center" class="my-1"><%= date.day %></p>
            <% diary_dates.each do |diary_date| %>
              <% if diary_date.diary_images.attached? %>
                <%= link_to diary_book_diary_date_path(@diary_book,diary_date) do %>
                  <%= image_tag diary_date.diary_images[0].representation(resize_to_limit: [70, 70]).processed, class: "image_size" %>
                <% end %>
              <% else %>
                <%= link_to diary_book_diary_date_path(@diary_book,diary_date) do %>
                  <span style="word-break: break-all;"><%= diary_date.body.truncate(21, omission: '...続きをみる') %></span>
        　       <% end %></br>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="card d-block rounded-0 " >
          <h5 class="section-ttl"><h5>日記帳を選択してください</h5>
          <div class="card d-block diary_book rounded-0 p-5" ></div>
        </div>
      <% end %>

    </div>


  </div>

</div>