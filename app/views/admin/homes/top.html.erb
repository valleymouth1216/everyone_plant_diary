<div class='container'>

  <div class="content admin_content">


    <div class="card d-block calendar rounded-0" >
      <div class="card-header mb-3"><h2 class="section-ttl">みんなの日記</h2></div>


      <div class="card d-block rounded-0 p-1" >
        <%= form_with url: admin_search_date_path, method: :get do |f| %>
          <span style="vertical-align: middle;">日付検索:</span>
          <span><%= f.date_field :start_date ,class:"form_middle mx-3" %></span>
          <span>～</span>
          <span><%= f.date_field :end_date,class:"form_middle mx-3" %></span>
          <%= f.submit '検索', class: 'btn_size btn btn-primary'  %>
        <% end %>
      </div>

      <div class="my-1">
        <%= month_calendar events: @diary_dates do |date, diary_dates| %>
          <p style="text-align:center" class="my-1"><%= date.day %></p>
          <% unless diary_dates.length == 0 %>
            <p style="text-align:center" class="my-1"><%=link_to "全#{diary_dates.length}件",admin_date_path(date: date),class:"calendar_day p-1" %></p>
            公開中の日記<%= DiaryDate.count_by_date(date).count %>件
          <% end %>
      <% end %>
      </div>
    </div>


  </div>
</div>