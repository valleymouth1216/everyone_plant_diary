<div class='container'>

<div class="content">


    <h2 class="section-ttl"><%= @diary_book.customer.name %>さんの<%= @diary_book.title %>の日記詳細</h2>

      <% @diary_book.tags.each do |tag| %>
        ▶<%= tag.name %>
      <% end %>

      <table class="customer_info customer_form" border="1">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>日付</td>
            <td><%= @diary.date.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>天気</td>
            <td><%=@diary.weather_i18n%></td>
          </tr>
          <tr>
          <tr>
            <td>気温</td>
            <td><%= @diary.temperature %>℃</td>
          </tr>
          <tr>
            <td>画像</td>
            <td>
              <% if @diary.diary_images.present? %>
                  <% @diary.diary_images.each do |diary_image|%>
                    <%= image_tag diary_image.variant(resize: '300x100').processed %>
                  <% end %>
              <% else %>
                  画像がありません
              <% end %>
            </td>
          </tr>
        </tbody>
        </table>

      <table class="customer_info customer_form" border="1">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>内容</td>
          </tr>
          <tr>
            <td colspan="2"><%= @diary.body %></td>
          </tr>
          <tr>
            <td>日記の公開設定</td>
            <td><% if @diary.status? %>公開する<% else %>公開しない<% end %></td>
          </tr>
          <tr>
            <td>管理者日記の公開設定</td>
            <td><% if @diary.status_admin? %>公開しない<% else %>公開する<% end %></td>
          </tr>

        </tbody>
        </table>


        <p><%= link_to '日記を編集する', edit_admin_diary_book_diary_path(@diary_book,@diary) %>&ensp;<%= link_to '日記帳詳細に戻る', admin_diary_book_path(@diary_book) %>&ensp;<%= link_to '日記一覧へ', admin_diary_book_diaries_path(@diary_book) %></p>




</div>
</div>