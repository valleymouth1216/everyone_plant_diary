<div class='container'>

    <div class="row">


     <div class="content admin_content col-lg-5 m-1">



      <div class="content  index card d-block rounded-0" >
        <div class="card-header mb-3"><h2 class="section-ttl">会員登録基本情報</h2></div>
          <%= image_tag @customer.get_profile_image(100,100),class:"my-3"  %>
        <div class="card-body card_text">
          <p><span class="px-2">ID:</span><span class="px-2"><%= @customer.id %></span></p>
          <p><span class="px-2">ユーザ名:</span><span class="px-2"><%= @customer.name %></span></p>
          <p><span class="px-2">メールアドレス:</span><span class="px-2"><%= @customer.email %></span></p>
          <p><span class="px-2">会員ステータス:</span>
             <% if @customer.is_deleted? %>
              <span class="private">退会</span>
            <% else %>
              <span class="publish">有効</span>
            <% end %>
          </p>
          <%= link_to "基本情報編集をする", edit_admin_customer_path(@customer), class: "btn btn-success my-2" %>
          <%= link_to "このユーザの日記一覧をみる",admin_customer_diary_books_path(@customer), class: "btn btn-success" %>
        </div>
      </div>

    </div>

     <div class="content admin_content col-lg-6  m-1">
      <div class="card d-block index rounded-0 my-2" >
        <div class="card-header mb-3"><h2 class="section-ttl">日記帳一覧</h2></div>
        <% if @diary_books.present? %>
          <% @diary_books.each do |diary_book| %>
            <%=link_to admin_diary_book_path(diary_book),class:"card_link_font" do %>
              <div class="card rounded-0 card_hover">
                <p class="no_margins py-2" style=" word-break: break-all;text-align:left" ><span>・</span><%= diary_book.title %></p>
              </div>
            <% end %>
          <% end %>
          <%= paginate @diary_books %>
        <% else %>
          <h3>日記帳がありません。</h3>
        <% end %>
    </div>
      </div>





</div>