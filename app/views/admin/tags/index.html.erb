<div class='container'>

  <%= render 'layouts/error_messages', resource: @tag %>

  <div class="content admin_content">


    <div class="card d-block rounded-0 index" >
      <div class="card-header_design2"><h2 class="section-ttl">タグ作成</h2></div>
      <div class="stitch py-2">
      <%= form_with model: @tag,url: admin_tags_path do |f| %>
        <div class="character_underline">
          <div class="m-2 p-1 required_frame" style="text-align:left" >
            <span class="px-1"><%= f.label :name,"タグ" %></span>
            <%= f.text_field :name ,placeholder:"タグ名を入力",class: "diary_book_form_new"  %>
          </div>
          <%= f.submit '新しいタグ作成', class: "m-3 btn btn-success " %>
        </div>
      <% end %>

</div>
 </div>
</div>

  <div class="content admin_content my-2">


    <div class="card d-block rounded-0 index" >
      <div class="card-header_design2"><h2 class="section-ttl">タグ一覧</h2></div>
      <div class="stitch py-2">
        <table  border="1" cellpadding="5" width="99%" class="my-2">
          <thead>
            <tr class="bg-light" height="40">
            <th width="15%"style="text-align:center;">タグNo.</th>
            <th width="65%">名前</th>
            <th width="15%"></th>
            <th width="15%"></th>
          </tr>
          </thead>
          <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td style="text-align:center;">
                  <p class="no_margins"><%= tag.id %></p>
              </td>
              <td style="text-align:center;">
                  <p class="no_margins"><%= tag.name %></p>
              </td>
              <td style="text-align:center;">
                <%= link_to edit_admin_tag_path(tag.id) do %>
                  <p class="no_margins p_tag">編集</p>
                <% end %>
              </td>
              <td style="text-align:center;">
                <%= link_to admin_tag_path(tag.id), method: :delete, "data-confirm" => "本当に削除しますか？" do  %>
                  <p class="no_margins p_tag">削除</p>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <% if @tags.present? %>
          <%= paginate @tags %>
        <% else %>
          <p>タグがありません。</p>
        <% end %>
      </div>
    </div>


  </div>

</div>
