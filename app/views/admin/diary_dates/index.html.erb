<div class='container'>

<div class="content">


    <h2 class="section-ttl"><%= @diary_book.customer.name %>さんの<%= @diary_book.title %>の日記一覧</h2>

<%= link_to '日記帳詳細に戻る', admin_diary_book_path(@diary_book) %>


<%= month_calendar events: @diary_dates do |date, diary_dates| %>
  <%= date.day %>

  <% diary_dates.each do |diary_date| %>
    <div>
    <%# if diary.status? %>
        <% if diary_date.diary_images.attached? %>
          <%= link_to admin_diary_book_diary_date_path(@diary_book,diary_date) do %>
            <%= image_tag diary.diary_images[0].representation(resize_to_limit: [200, 180]).processed, class: "review-img"%>
          <% end %>
        <% else %>
          <%= link_to admin_diary_book_diary_date_path(@diary_book,diary_date) do %>
              <%= diary_date.body.truncate(10, omission: '...続き') %>
        　　<% end %></br>
          <%#= link_to '日記を編集する', edit_diary_book_diary_path(@diary_books,diary) %>
          <%#= link_to "削除", diary_book_diary_path(@diary_books,diary), method: :delete, "data-confirm" => "本当に削除しますか？" ,class: "btn btn-danger ml2"  %>
        <% end %>
    </div>
  <% end %>
  <% end %>
</div>

</div>

</div>

</div>